<div class="page-wrapper">
  <div class="pv-40 dark-translucent-bg">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="hc-element-invisible" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
            <div class="form-block center-block p-30 light-gray-bg border-clear">
              <h2>Log in</h2>
              
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email%>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control col-md-8" %>
              </div>
              
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control col-md-8" %>
              </div>
              
              <% if devise_mapping.rememberable? -%>
              <div class="ml-md-auto col-md-9 space-top">
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
                
                <% end -%>
                
                <div class="actions space-top">
                  <%= f.submit "Log in", class: "btn btn-group btn-default btn-animated" %>
                </div>
                <% end %>
                
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>