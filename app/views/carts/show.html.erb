<section class="main-container">

  <div class="container">
    <div class="row">

      <!-- main start -->
      <!-- ================ -->
      <div class="main col-12">

        <!-- page-title start -->
        <!-- ================ -->
        <h1 class="page-title">Shopping Cart</h1>
        <div class="separator-2"></div>
        <!-- page-title end -->

        <table class="table cart table-hover table-colored">
          <thead>
            <tr>
              <th>Product </th>
              <th>Price </th>
              <th>Remove </th>
              <th class="amount">Total </th>
            </tr>
          </thead>
          <tbody>
            <%sum = 0; q = 0%>
            <%@cart.items.each do |c|%>
            <tr class="remove-data">
              <td class="product"><a href="shop-product.html"><%=c.title%></a> <small>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas inventore modi.</small></td>
              <td class="price"> <%=c.price%> </td> <%sum += c.price%>
              <td class="remove"><%= link_to "Remove", "/carts/#{c.id}", method: :delete, class: "btn btn-remove btn-sm btn-default" %></td>
            </tr>
            <%q += 1%>
            <%end%>
            <tr>
              <td class="total-quantity" colspan="3">Total <%=q%> Items</td>
              <td class="total-amount"><%=sum%>$</td>
            </tr>
          </tbody>
        </table>
        <div class="text-right">
          <a href="/carts/show" class="btn btn-group btn-default">Update Cart</a>
          <%= link_to "Checkout", "/order/create", method: :post, class: "btn btn-group btn-default" %>
        </div>
      </div>
      <!-- main end -->
    </div>
  </div>
</section>
